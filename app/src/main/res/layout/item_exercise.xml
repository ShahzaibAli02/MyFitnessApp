<LinearLayout
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:paddingStart="40sp"
    android:layout_margin="10sp"
    android:paddingEnd="40sp"
    android:paddingBottom="40sp"
    android:orientation="vertical"
    android:paddingTop="20sp"
    android:background="@drawable/roundedbutton"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/txtExerciseNum"
        android:text="Exercise "
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/editButton"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:tint="@color/white"
            android:layout_marginEnd="10sp"
            android:src="@drawable/ico_pose"
            android:layout_marginRight="10sp" />
        <TextView
            android:id="@+id/txtPose"
            android:text="Pose   :"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:tint="@color/white"
            android:layout_marginEnd="10sp"
            android:src="@drawable/ico_exerice_64px"
            android:layout_marginRight="10sp" />
        <TextView
            android:id="@+id/txtExercise"
            android:text="Health Benefit   : "
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>




</LinearLayout>